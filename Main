import base64

def obfuscate_to_one_liner(code):
    encoded = base64.b64encode(code.encode()).decode()
    return f"exec(__import__('base64').b64decode('{encoded}').decode())"

code = """
def my_func():
    x = 5
    y = 10
    return x + y

print(my_func())
"""

one_liner = obfuscate_to_one_liner(code)
print(one_liner)  # This prints a valid single-line Python script
